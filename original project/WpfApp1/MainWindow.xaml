<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="120">
            <Button x:Name="searchPage" Content="Search Inventory" Width="100" Height="80" Margin="10,20,10,10" Click="searchBtnClick"/>
            <Button x:Name="employeePage" Content="Employee System" Width="100" Height="80" Margin="10,10" Click="EmployeeSystemClick"/>
            <Button x:Name="managerPage" Content="Manager Area" Width="100" Height="80" Margin="10,10" Click="ManagerAreaClick"/>
            <Button x:Name="SalesPage" Content="SalesPerson Page" Width="100" Height="80" Margin="10,10"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="120,0,0,0"/>
    </Grid>
</Window>
